{
  "name": "buddyclaw",
  "version": "0.0.2",
  "description": "OpenClaw skill for posting to WordPress and BuddyBoss/BuddyPress with multi-agent support, email verification, and REST API token authentication",
  "main": "enhanced-poster.js",
  "scripts": {
    "test": "node test-api-token.js",
    "test-agent": "node agent-manager.js --list",
    "test-email": "node email-verifier.js --check --email test@example.com",
    "register-agent": "node agent-manager.js --register",
    "legacy": "node poster.js",
    "test-all": "node test-api-token.js && echo 'All tests completed!'"
